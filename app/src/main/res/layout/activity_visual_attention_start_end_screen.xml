<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/visual_attention_score_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/visual_attention_info_text"
        style="@style/TextSubHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center_horizontal"
        android:text="@string/title_visual_attention"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/visual_attention_score_text"
        style="@style/TextSubHead"
        android:layout_width="360dp"
        android:layout_height="106dp"
        android:layout_marginTop="276dp"
        android:gravity="center_horizontal"
        android:text="@string/visualAttention_display_score"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/visual_attention_attempts_text" />

    <TextView
        android:id="@+id/visual_attention_attempts_text"
        style="@style/TextBody"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/textview_attempts_plural"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/visual_attention_info_text" />

    <Button
        android:id="@+id/visual_attention_play_btn"
        style="@style/button_yellow_background"
        android:layout_width="278dp"
        android:layout_height="82dp"
        android:layout_marginTop="228dp"
        android:gravity="center_horizontal"
        android:text="@string/start_game"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/visual_attention_score_text" />

    <Button
        android:id="@+id/visual_attention_exit_btn"
        style="@style/button_yellow_background"
        android:layout_width="279dp"
        android:layout_height="77dp"
        android:layout_marginTop="28dp"
        android:gravity="center_horizontal"
        android:text="@string/exit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/visual_attention_play_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>